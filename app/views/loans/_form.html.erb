<%= form_with(model: loan, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :principal_amount, 'Principal Amount' %>
      <%= form.number_field :principal_amount, step: 0.01, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= form.label :interest_rate, 'Interest Rate (%)' %>
      <%= form.number_field :interest_rate, step: 0.01, class: 'form-control', required: true %>
    </div>
  
    <%= form.submit 'Submit Loan Request', class: 'btn btn-primary' %>
  <% end %>
  