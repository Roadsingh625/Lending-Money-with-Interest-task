<h1>Loan Details</h1>

<p><strong>Principal Amount:</strong> <%= @loan.principal_amount %></p>
<p><strong>Interest Rate:</strong> <%= @loan.interest_rate %>%</p>
<p><strong>Total Amount (Principal + Interest):</strong> <%= @loan.total_amount %></p>
<p><strong>Status:</strong> <%= @loan.state %></p>

<% if @loan.approved? %>
  <%= link_to 'Confirm Loan', confirm_loan_path(@loan), method: :patch, class: 'btn btn-primary' %>
<% elsif @loan.open? %>
  <%= link_to 'Repay Loan', repay_loan_path(@loan), method: :patch, class: 'btn btn-primary' %>
<% elsif @loan.rejected? %>
  <p>This loan was rejected by the admin.</p>
<% elsif @loan.closed? %>
  <p>This loan has been closed.</p>
<% end %>

<%= link_to 'Back to Loans', loans_path, class: 'btn btn-secondary' %>
